@{
  Layout = "_Layout";
}
      <h1>Repeated Word Counter</h1>

      <form action="play/result" method="post">
        <div class='form-group'>
          <label for='sentence'>Enter a sentence.</label>
          <input id='sentence' name='sentence' class='form-control' type='text'>
        </div>

        <div class='form-group'>
          <label for='word'>Enter a word to be searched and counted.</label>
          <input id='word' name='word' class='form-control' type='text'>
        </div>

        <button type='submit' class='btn-info'>Go!</button>
      </form>
    </div>
  </body>
